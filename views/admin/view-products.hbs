<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="card-header">

                <a href="/admin/add-products" <button type="submit" class="btn btn-dark ml-3" style="border-color: rgb(240, 245, 245);">add product </button></a></div>

            </div>
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">All Products</h6>
                <div class="table-responsive">
                    <table class="table" id="usersTable">
                        <thead>
                            <tr>
                                <th scope="col">Index</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Brand</th>
                                <th scope="col">Description</th>
                                <th scope="col">Category</th>
                                <th scope="col">Image</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr>
                                    <td scope="row">{{ inc @index }}</td>
                                    <td>{{ this.name }}</td>

                                    <td>{{ this.price }}</td>
                                    <td>{{ this.brand }}</td>
                                    <td>{{ this.description }}</td>

                                    <td>{{ this.category }}</td>
                                    <td>
                                        <img style="width:50px; height:50px;" src="/multerImage/{{ this.images.[0] }}"></td>
                                    <td>
                                        <a href="/admin/Edit-product/{{ this._id }}" onclick="return confirm('Do you want to Edit {{ this.name }} ?')" class="btn btn-primary"  >Edit</a>
                                    </td>
                                    <td>
                                        <a href="/admin/delete-product/?id={{ this._id }}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{ this.name }} ?')" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {


        $('#usersTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#usersTable').DataTable();
</script>

