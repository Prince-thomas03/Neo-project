<div style="margin: 20px;">
    <div style="margin-top: 110px;">
        <table class="table" id="table_id">

            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">DATE</th>
                    <th scope="col">MOBILE</th>
                    <th scope="col">AMOUNT</th>
                    <th scope="col">PAYMENT</th>
                    <th scope="col">STATUS</th>
                    <th scope="col">VIEW</th>
                    <th scope="col">ACTION</th>


                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <th scope="row">{{ inc @index}}</th>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.Phone}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.PaymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td><a href="/viewOrderProducts/{{this._id}}" class="btn btn-primary">details</a></td>



                     {{#if cancel}}

                     <td>cancelled</td>

                     {{else}}

                    <td> <a class="btn btn-danger" href="/cancelOrder/{{this._id}}"
                            onclick="return confirm ('are you want to cancel your order?')">cancel
                        </a></td>

                        {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>



<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>