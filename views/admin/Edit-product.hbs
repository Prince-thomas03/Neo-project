<body>
    <div class="content  pe-5 mt-5">

        <div class="row" style="background-color: #191C24; padding-right: 20%;">
            <div>
                <h3 class="text-primary" style="background-color: #191C24; margin: 0; padding-left: 2%;">Edit Products
                </h3>
            </div>

            <form action="/admin/Edit-product/{{product._id}}" method="post" enctype="multipart/form-data" 
                style="background-color: #191C24; margin-left: auto; margin-right: auto;">

                <div class="mb-3">




                    <label for="name" class="form-label">Name</label>
                    <input name="name" type="text" class="form-control" id="name" aria-describedby="" value="{{product.name}}"
                        placeholder="Enter product name" style="background-color: aliceblue;">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Price</label>
                    <input name="price" type="number" class="form-control" id="price" value="{{product.price}}"
                        placeholder="Enter price" style="background-color: aliceblue;">
                </div>
                  <div class="mb-3">
                    <select name="category" class="form-control" >
                        <option selected>{{product.brand}}</option>
                        {{#each category}}
                        <option value="{{this.brand}}"> {{this.brand}} </option>
                        {{/each}}
                    </select>

                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Description</label>
                    <input name="description" type="text" class="form-control" id="description" value="{{product.description}}"
                        placeholder="About the product" style="background-color: aliceblue; height: 100px;">
                </div>
                <div class="mb-3">
                    <select name="category" class="form-control" >
                        <option selected>{{product.category}}</option>
                        {{#each category}}
                        <option value="{{this.category}}"> {{this.category}} </option>
                        {{/each}}
                    </select>

                </div>

                   <img src="/multerImage/{{product.images.[0]}}" style="width: 100px;"  id="imgView1">
                    <img src="/multerImage/{{product.images.[1]}}" style="width: 100px;"  id="imgView2">
                    <img src="/multerImage/{{product.images.[2]}}" style="width: 100px;"  id="imgView3">
                    <img src="/multerImage/{{product.images.[3]}}" style="width: 100px;"  id="imgView4">
                <div class="mb-3">
                    <label>Add images</label>
                    <input name="image" type="file" class="form-control" onchange="viewImage1(event)" multiple >
                </div>

                <button type="submit" class="btn btn-primary" value="uploadImages">Submit</button>
            </form>
            
        </div>
    </div>
</body>



<script>

function viewImage1(event)=>{

document.getElementById('imgView1').src=URL.createObjectURL(event.target.files[0])
document.getElementById('imgView2').src=URL.createObjectURL(event.target.files[1])
document.getElementById('imgView3').src=URL.createObjectURL(event.target.files[2])
document.getElementById('imgView4').src=URL.createObjectURL(event.target.files[3])

}


</script>

